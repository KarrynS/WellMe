<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation.min.css"
        integrity="sha256-ogmFxjqiTMnZhxCqVmcqTvjfe1Y/ec4WaRj/aQPvn+I=" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/signup.css" type="text/css" />
    <title>Well Me</title>
</head>

<body>
    <!-- {{!-- delete above after setup  above--}} -->
    <nav id="navBar">
        <div class="top-bar">
            <div class="top-bar-left">
                <h1 class="menu-text">Well <i class="fas fa-heart"></i> Me</h1>
            </div>
            <div class="top-bar-right">
                <ul class="vertical medium-horizontal dropdown menu align-right text-black" id="nav-menu"
                    data-dropdown-menu>
                    <li class="is-active"><a href="#">Home</a></li>
                    <li><a href="./members.handlebars">Daily Log</a></li>
                    <li><a href="./graph.handlebars">Weekly Results</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="bg-img">
        <!-- switch signup or login -->

        <a class="button small large-down-expanded" id="getLoginForm" href="#">Already a Member? Login Here</a>

        <!-- form container -->
        <div class="translucent-form-overlay">
            <!-- sign-up form -->
            <form class="container" id="signupForm">
                <h3>Enter Your Details</h3>
                <div class="row columns">
                    <label>Name
                        <input type="text" name="keyword" placeholder="Enter here">
                    </label>
                </div>
                <div class="row columns">
                    <label>Email
                        <input type="text" name="keyword" placeholder="Enter here">
                    </label>
                </div>
                <div class="row columns">
                    <label>Password
                        <input type="text" name="keyword" placeholder="Enter here">
                    </label>
                </div>
                <div class="row columns">
                    <label>Height
                        <input type="text" name="location" placeholder="Enter in cm">
                    </label>
                </div>
                <div class="row columns">
                    <label>Weight
                        <input type="text" name="location" placeholder="Enter in kg">
                    </label>
                </div>
                <div class="row columns">
                    <label>Age
                        <input type="text" name="location" placeholder="Enter here">
                    </label>
                </div>
                <div class="row columns">
                    <label>Gender
                        <select name="status" type="text">
                            <option>None</option>
                            <option value="rent">Female</option>
                            <option value="buy">Male</option>
                            <option value="buy">Non-Binary</option>
                            <option value="buy">Trans</option>
                        </select>
                    </label>
                </div>
                <div class="row columns">
                    <label>Food Preference
                        <select name="status" type="text">
                            <option>None</option>
                            <option value="rent">Vegetarian</option>
                            <option value="buy">Vegan</option>
                            <option value="buy">Paleo</option>
                            <option value="buy">Gluten Free</option>
                        </select>
                    </label>
                </div>
                <button type="submit" class="primary button expanded search-button">
                    Submit
                </button>
            </form>
            <!-- login form -->
            <form class="container hide" id="loginForm">
                <h3>Login Here</h3>
                <div class="row columns">
                    <label>Email
                        <input type="text" name="keyword" placeholder="Enter here">
                    </label>
                </div>
                <div class="row columns">
                    <label>Password
                        <input type="text" name="keyword" placeholder="Enter here">
                    </label>
                </div>
                <button type="submit" class="primary button expanded search-button">
                    Submit
                </button>
            </form>
        </div>
    </div>
