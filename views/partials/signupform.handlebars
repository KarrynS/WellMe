<form class="container" id="signupForm">
    <h4>Enter Your Details</h4>
    <div class="row columns">
        <label>Name
            <input class="usernameInput" type="text" name="keyword" placeholder="Enter here">
        </label>
    </div>
    <div class="row columns">
        <label>Email
            <input class="emailInput" type="text" name="keyword" placeholder="Enter here">
        </label>
    </div>
    <div class="row columns">
        <label>Password
            <input class="passwordInput" type="password" name="keyword" placeholder="Enter here">
        </label>
    </div>
    <div class="row columns">
        <label>Height
            <input class="heightInput" type="text" name="location" placeholder="Enter in cm">
        </label>
    </div>
    <div class="row columns">
        <label>Weight
            <input class="weightInput" type="text" name="location" placeholder="Enter in kg">
        </label>
    </div>
    <div class="row columns">
        <label>Age
            <input class="ageInput" type="text" name="location" placeholder="Enter here">
        </label>
    </div>
    <div class="row columns">
        <label>Gender
            <select class="genderInput" name="status" type="text" placeholder="Enter in kg">
                <option value="">Select gender</option>
                <option value="female">Female</option>
                <option value="male">Male</option>
            </select>
        </label>
    </div>
    <div class="row columns">
        <label>Food Preference
            <select class="foodInput" name="status" type="text">
                <option value="None">None</option>
                <option value="Vegetarian">Vegetarian</option>
                <option value="Vegan">Vegan</option>
                <option value="Paleo">Paleo</option>
                <option value="Gluten Free">Gluten Free</option>
            </select>
        </label>
    </div>
    <div class="row columns">
        <label>Activity Level
            <select class="activityInput" name="status" type="text">
                <option value="">Select activity level most suited to you</option>
                <option value="sedentary">Sedentary - little to no excercise + work a desk job</option>
                <option value="light">Light - light excercise 1-3 days/week</option>
                <option value="moderate">Moderate - moderate excercise 3-5 days/week</option>
                <option value="high">High - heavy excercise 6-7 days/week</option>
                <option value="extreme">Extreme - very heavy excercise, hard labor job, training 2x/day</option>
            </select>
        </label>
    </div>
    <div class="row columns">
        <label>Goal
            <select class="goalInput" name="status" type="text">
                <option value="">Choose your weight goal</option>
                <option value="reduction">Lose weight</option>
                <option value="maintain">Maintain current weight</option>
                <option value="gain">Gain weight</option>
            </select>
        </label>
    </div>
    <button type="submit" class="primary button expanded search-button">
        Submit
    </button>
</form>