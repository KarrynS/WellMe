<!-- handlebars partials for members page only goals bar -->
{{>goal-bar name=name}}


<!-- background image for page -->
<div class="bg-img">
    <div class="row">
        <div class="col-sm-12 col-lg-6">
            <!-- log daily form add hide class when calculated -->
            <div class="logForm">
                <div class="translucent-form-overlay">
                    <form class="container" id="dailyLogForm">
                        <h3 class="text-center">Log Your Day</h3>
                        <p class="memIntro text-center">Did you meet your goals today {{name}}?</p>
                        <p class="memIntro text-center">On a scale from <b>0</b> <i>Nope not today</i> to <b>10</b>
                            <i>Yeah I Nailed it!</i> Move the Sliders below
                        </p>
                        <!-- calories input slider -->
                        <label>Calories</label>
                        <div class="row">
                            <div class="col-sm-10">
                                <div id="calorieInput" class="slider" data-slider data-initial-start="0" data-end="10">
                                    <span class="slider-handle" data-slider-handle role="slider" tabindex="1"
                                        aria-controls="sliderOutputCalories"></span>
                                    <span class="slider-fill" data-slider-fill></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <input type="number" id="sliderOutputCalories">
                            </div>
                        </div>

                        <!-- exercise input slider -->
                        <label>Excercise</label>
                        <div class="row">
                            <div class="col-sm-10">
                                <div id="exerciseInput" class="slider" data-slider data-initial-start="0" data-end="10">
                                    <span class="slider-handle" data-slider-handle role="slider" tabindex="1"
                                        aria-controls="sliderOutputExercise"></span>
                                    <span class="slider-fill" data-slider-fill></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <input type="number" id="sliderOutputExercise">
                            </div>
                        </div>
                        <!-- water intake slider -->
                        <label>Water Intake</label>
                        <div class="row">
                            <div class="col-sm-10">
                                <div id="waterInput" class="slider" data-slider data-initial-start="0" data-end="10">
                                    <span class="slider-handle" data-slider-handle role="slider" tabindex="1"
                                        aria-controls="sliderOutputWater"></span>
                                    <span class="slider-fill" data-slider-fill></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <input type="number" id="sliderOutputWater">
                            </div>
                        </div>
                        <!-- sleep intake slider -->
                        <label>Sleep</label>
                        <div class="row">
                            <div class="col-sm-10">
                                <div id="sleepInput" class="slider" data-slider data-initial-start="0" data-end="10">
                                    <span class="slider-handle" data-slider-handle role="slider" tabindex="1"
                                        aria-controls="sliderOutputSleep"></span>
                                    <span class="slider-fill" data-slider-fill></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <input type="number" id="sliderOutputSleep">
                            </div>
                        </div>
                        <button id="dailylogBtn" type="submit" class="primary button expanded search-button">
                            Submit
                        </button>
                    </form>
                    <!-- Daily Score Form Remove hide class when calculated-->
                    <form class="container hide" id="dailyScoreForm">
                        <h3 class="text-center">Your Wellbeing Score is</h3>
                        <h4 id="score" class="memIntro text-center"></h4>
                        <p class="inspoQuote text-center"><i>{{quote}}</i></p>
                        <button type="submit" class="primary button expanded search-button round">
                            View Your Weekly Results Here
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- recipe section -->
        <div class="col-sm-12 col-lg-6">

            <!-- recipes go here when API called on page load -->
            {{recipes}}
        </div>
    </div>
</div>